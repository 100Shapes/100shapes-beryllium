extends base
include _partial/post/meta

block site_body
    include _partial/post/entry_pagination

    .clearfix
        .col.col-12.px2
            if page.seo_title
                h1.mt4= page.seo_title
            else
                h1.mt4= page.title

            if page.subtitle
                p.lead.mb4= page.subtitle

        .sm-col.sm-col-12.md-col-8.px2
            div!= page.more

        .sm-col.sm-col-12.md-col-4.px2
            +postDate(page.date)
            +postCategory(page.categories)

            p.
                consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
                cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
                proident, sunt in culpa qui officia deserunt mollit anim id est laborum.

    include _partial/post/entry_pagination